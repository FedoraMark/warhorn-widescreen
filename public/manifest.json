{
  "manifest_version": 3,
  "name": "Warhorn Widescreen",
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "version": "0.1.0",
  "description": "Makes the calendar pages on Warhorn.net use the full width of the page.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["WarhornWidescreen.js"],
      "matches": [
        "https://warhorn.net/events/*"
      ]
    }
  ]
}